<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityFormDeepClean">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headbackformdeepclean"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/red">

        <ImageView
            android:id="@+id/icbackformdeepclean"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/text_deepclean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Deep Clean"
            android:textSize="17sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/titledeepclean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deep Clean"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/deskripsideepclean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuci Menyeluruh 2/3 Hari"
        android:textSize="17sp"
        android:textColor="#666666"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/titledeepclean"/>

    <ListView
        android:id="@+id/list_view_pemesanan"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/deskripsideepclean"
        tools:listitem="@layout/list_form_pesan"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deskripsipenjelasan"
        android:layout_below="@id/list_view_pemesanan"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/des_deep_clean"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/des_sue"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: "
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 0"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="8dp" />
            </RelativeLayout>
            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Masukkan Keranjang"
                android:textSize="18sp"
                android:backgroundTint="@color/red"
                android:background="@drawable/bt_rounded"
                android:textAllCaps="false"
                android:textColor="@color/white"/>
        </LinearLayout>

</RelativeLayout>