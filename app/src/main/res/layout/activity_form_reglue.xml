<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityFormReglue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headbackformreglue"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/red">

        <ImageView
            android:id="@+id/icbackformreglue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/text_reglue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Reglue"
            android:textSize="17sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/titlereglue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reglue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/deskripsireglue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengeleman Pada Sole Rusak"
        android:textSize="17sp"
        android:textColor="#666666"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/titlereglue"/>


    <ListView
        android:id="@+id/list_view_pemesanan"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/deskripsireglue"
        tools:listitem="@layout/list_form_pesan"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deskripsipenjelasan"
        android:layout_below="@id/list_view_pemesanan"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/des_reglue"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/des_sue"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: "
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Masukkan Keranjang"
            android:textSize="18sp"
            android:backgroundTint="@color/red"
            android:background="@drawable/bt_rounded"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>


</RelativeLayout>